project(ccpp*idl): ccpp_typesupport {
  after += ospl_testlib
  idlflags += -Sp
  IDL_Files {
    TestTopics.idl
    TestTopicsDcps.idl
  }

  TypeSupport_Files {
    TestTopics.idl
  }

  custom_only = 1
}

