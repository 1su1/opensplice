#
# Make HDE mirror
#

. ${OSPL_HOME}/install/make_functions

echo "* Build SPLICE HDE"

set_hde_envs $*
remove_hde_mirror
create_hde_mirror

echo "*   Prepare HDE for target ${HDE_subdir}"
install_hde_target "${HDE_dir}" "${target}" "${host}" "${target_version}" "${target_date}" "${suffix_exe}" "${suffix_script}" "${source_env}" "${target_env}"
echo "*   HDE prepared for target ${HDE_subdir} Ready"

if [ -z "$OSPL_OUTER_HOME" ]
then
    echo "* SPLICE HDE Ready"
fi
