. ${OSPL_HOME}/install/make_functions

echo $*

installer_setup $*

OSPL_BUILDER_APP=`echo $OSPL_BUILDER | awk -F'/' '{ print $NF }'`

if [ -z "${OSPL_BUILDER}" ] || [ "${OSPL_BUILDER_APP}" != "builder" ]
then
    #If empty try tar
    OSPL_BUILDER=`which tar`
    if [ "$?" != "0" ]
    then
        echo "Error - No packager found please set OSPL_BUILDER"
        return 1
    fi
    PLATFORM=${SOURCE_TARGET}${TARGET_ENV}
    echo ${OSPL_BUILDER} -cf ${OUTPUTDIR}/OpenSpliceDDS${PACKAGE_VERSION}-${PLATFORM}-${INSTTYPE}.tar ${INSTTYPE}
    ${OSPL_BUILDER} -cf ${OUTPUTDIR}/OpenSpliceDDS${PACKAGE_VERSION}-${PLATFORM}-${INSTTYPE}.tar ${INSTTYPE}
fi

