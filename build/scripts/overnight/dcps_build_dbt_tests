#!/bin/sh

. buildsys/functions

ProcessArgs $*
Assert LoadConfigs
Assert SetupLogDir
Assert SetupResFile

cd ../../..

SetState Testing
ArchiveLogs

if [ "$DEP" != "none" ]
then
   OSPL_HOME=$DEPWORKDIR
   export OSPL_HOME
fi

SPLICE_PLATFORM=$SETUP_TYPE
export SPLICE_PLATFORM
. ./configure

if [ "$CONFIGURATION" != "OK" ]
then
    echo  "ERROR: configuration - dcps_build_dbt_tests"
    exit 1
fi

echo "BUILD/DBT=RUNNING" >> $RESFILE
ArchiveLogs

/bin/bash $OSPL_OUTER_HOME/bin/management_dbt_run build dev
exit 0